@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли пароль?";
}

<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="forms">
    <h2>@ViewData["Title"]</h2>
    <h4>Введите email.</h4>
    <hr />
    <div asp-validation-summary="All" class="text_error"></div>
    <div class="formslabel">
        <label asp-for="Email"></label>
        <div>
            <input asp-for="Email" class="form-control" />            
        </div>
    </div>
    <div class="formslabel">
        <input class="button_classic" type="submit" value="Отправить" />
    </div>
</form>