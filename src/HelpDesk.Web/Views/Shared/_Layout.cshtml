@using HelpDesk.Common.Constants;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/app.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("css", false)
</head>

<body>
    <header>
        <div class="container">
            <div class="header">
                <a class="logo" asp-controller="Home" asp-action="Index">Help Desk</a>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link active">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">FAQ</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(UserConstants.AdminRole))
                {
                <li class="nav-item">
                    <form method="get" asp-controller="Profile" asp-action="UserProfiles">
                        <button class="nav-item noClick" type="submit" title="Вход">Пользователи</button>
                    </form>
                </li>
                }
                            <li class="nav-item">
                                <form method="get" asp-controller="Profile" asp-action="Profile">
                                    <button class="nav-item noClick" type="submit" title="Профиль">Профиль</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button class="nav-item noClick" type="submit" title="Выход">Выход</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form method="get" asp-controller="Account" asp-action="Login">
                                    <button class="nav-item noClick" type="submit" title="Вход">Вход</button>
                                </form>
                            </li>
                        }
                </ul>
                <div class="header-image"></div>
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>