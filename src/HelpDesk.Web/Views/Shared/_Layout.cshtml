@using HelpDesk.Common.Constants;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/app.css" rel="stylesheet" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    @RenderSection("css", false)
</head>

<body>
    <header>
        <div class="container">
            <div class="header">
                <a class="logo" asp-controller="Home" asp-action="Index">Help Desk</a>
                <ul class="nav-list">
                    <li class="nav-item">
                        <form method="get" asp-controller="Home" asp-action="Index">
                            <button class="nav-item noClick" type="submit" title="На главную">На главную</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form method="get" asp-controller="FAQ" asp-action="FAQ">
                            <button class="nav-item noClick" type="submit" title="FAQ">FAQ</button>
                        </form>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(UserConstants.AdminRole))
                        {
                            <li class="nav-item">
                                <form method="get" asp-controller="Profile" asp-action="UserProfiles">
                                    <button class="nav-item noClick" type="submit" title="Пользователи">Пользователи</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="get" asp-controller="Schedulle" asp-action="Schedulle">
                                    <button class="nav-item noClick" type="submit" title="Задачи">Задачи</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="get" asp-controller="Request" asp-action="Properties">
                                    <button class="nav-item noClick" type="submit" title="Настройки">Настройки</button>
                                </form>
                            </li>
                        }
                        <li class="nav-item">
                            <form method="get" asp-controller="Request" asp-action="Requests">
                                <button class="nav-item noClick" type="submit" title="Заявки">Заявки</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form method="get" asp-controller="Profile" asp-action="Profile">
                                <button class="nav-item noClick" type="submit" title="Профиль">Профиль</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button class="nav-item noClick" type="submit" title="Выход">Выход</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <form method="get" asp-controller="Account" asp-action="Login">
                                <button class="nav-item noClick" type="submit" title="Вход">Вход</button>
                            </form>
                        </li>
                    }
                </ul>
                <div class="header-image-block">
                    <div class="header-image"></div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("js", false)
</body>
</html>