
@model ProfileViewModel

<form class="forms" method="post" asp-controller="Profile" asp-action="ChangePhoneNumber">
    <div class="formslabel">
        <p>Текущий номер:</p>
        <p>@Model.Phone</p>
    </div>
    <div class="formslabel">
        <label asp-for="Phone">Введите новый номер телефона:</label><br />
        <input asp-for="Phone" />
        <span asp-validation-for="Phone" class="text_error"></span>
    </div>
    <div class="formslabel">
        <input class="button_classic" type="submit" value="Сохранить" />
    </div>
</form>