
@model ProfileViewModel

<form class="forms" method="post" asp-controller="Profile" asp-action="ChangeEmail">
    <div class="formslabel">
        <p>Текущий Email</p>
        <p>@Model.Email</p>
    </div>
    <div class="formslabel">
        <label asp-for="Email">Введите новый Email:</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text_error"></span>
    </div>
    <div class="formslabel">
        <input class="button_classic" type="submit" value="Сохранить" />
    </div>
</form>